{% extends 'admin/base.html.twig' %}

{% block title %}Création d'un nouvel admin{% endblock %}

{% block body %}

        <div class="container">
            <h1>Créer un nouvel administrateur</h1>
            {{ form_start(form) }}

            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.email) }}
            {{ form_row(form.hash) }}
            {{ form_row(form.passwordConfirm) }}

            {{ form_row(form.city) }}
            {{ form_row(form.phone) }}

            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                Confirmez l'inscritpion de l'admin
            </button>

            {{ form_end(form) }}
        </div>

{% endblock %}