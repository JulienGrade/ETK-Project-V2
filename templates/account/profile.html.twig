{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}

    <div class="container-fluid" id="events">
        <div class="row text-warning justify-content-center">
            <h1 class="py-5">Modification du profil</h1>
        </div>
        {{ form_start(form) }}
        <div class="row justify-content-center text-white">
            <div class="col-md-4 col-12">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations générales</h2>
                    <hr />
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.city) }}
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="alert alert-light text-center">
                    <p>Si vous avez terminé vos modifications, vous pouvez les enregistrer</p>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}