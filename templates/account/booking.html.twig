



{% block body %}
    {% for booking in app.user.bookings %}
    <div class="table-responsive-md">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Date</th>
                    <th scope="col">Lieu</th>
                    <th scope="col">Place(s)</th>
                    <th>Modifier</th>
                    <th>Annuler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{ booking.event.title }}</th>
                    <td>{{ booking.event.startDate | date('d/m/Y') }}</td>
                    <td>{{ booking.event.location }}</td>
                    <td>{{ booking.childrens | length }}</td>
                    <td><a href="{{ path('booking_edit', {'id': booking.id}) }}"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('booking_delete', {'id': booking.id}) }}"><i class="fas fa-trash"></i></a></td>
                </tr>
            </tbody>
        </table>
    </div>
    {% endfor %}
{% endblock %}