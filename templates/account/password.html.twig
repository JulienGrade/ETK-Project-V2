{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe{% endblock %}

{% block body %}


    <div class="container-fluid text-center" id="events">
        <h1 class="py-5 text-warning">Modification du mot de passe</h1>
        {{ form_start(form) }}
        <div class="row justify-content-center">
            <div class="col-md-4 col-12">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations générales</h2>
                    <hr />
                    {{ form_widget(form) }}
                </div>
            </div>
            <div class="col-md-4 col-12">
                <div class="alert alert-light text-center">
                    <p>Si vous avez terminé vos modifications, vous pouvez les enregistrer</p>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i>
                        Enregistrer les modifications
                    </button>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}