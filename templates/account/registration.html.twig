{% extends 'base.html.twig' %}

{% block title %}Euratech'Kids - Inscription{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('fonts/font-awesome-4.7.0/css/font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('fonts/Linearicons-Free-v1.0.0/icon-font.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/animate/animate.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/css-hamburgers/hamburgers.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/animsition/css/animsition.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/select2/select2.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/daterangepicker/daterangepicker.css') }}">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="{{ asset('css/util.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-login100" style="background-image: url({{ asset('img/bg-01.jpg') }});">
            <div class="wrap-login100 p-t-1 p-b-30">
                <span class="login100-form-title p-b-31">
					<a href="{{ path('homepage') }}"><i class="fa fa-home fa-3x" aria-hidden="true"></i></a>
				</span>
				<span class="login100-form-title p-b-41">
					Inscription
				</span>

                {{ form_start(form, {'attr': {'class': 'login100-form validate-form p-b-33 p-t-5'}}) }}


                    <div class="wrap-input100 validate-input pb-0">
                        {{ form_widget(form.firstName, {'attr': {'class': 'input100', 'auto-complete': 'off'}}) }}
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>

                        <div class="form-error">
                            {{ form_errors(form.firstName, {'attr':{'data-validate':'!'}}) }}
                        </div>
                    </div>

                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.lastName, {'attr': {'class': 'input100', 'auto-complete': 'off'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe82b;"></span>

                    <div class="form-error">
                        {{ form_errors(form.lastName, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>


                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.email, {'attr': {'class': 'input100', 'auto-complete': 'off'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe818;"></span>

                    <div class="form-error">
                        {{ form_errors(form.email, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>


                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.city, {'attr': {'class': 'input100', 'auto-complete': 'off'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe801;"></span>

                    <div class="form-error">
                        {{ form_errors(form.city, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>



                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.phone, {'attr': {'class': 'input100'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe83a;"></span>

                    <div class="form-error">
                        {{ form_errors(form.phone, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>



                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.hash, {'attr': {'class': 'input100'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>

                    <div class="form-error">
                        {{ form_errors(form.hash, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>



                <div class="wrap-input100 validate-input pb-0">
                    {{ form_widget(form.passwordConfirm, {'attr': {'class': 'input100'}}) }}
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>

                    <div class="form-error">
                        {{ form_errors(form.passwordConfirm, {'attr':{'data-validate':'!'}}) }}
                    </div>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn">
                        Inscription
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>



{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/jquery/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('vendor/animsition/js/animsition.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/popper.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendor/select2/select2.min.js') }}"></script>
    <script src="{{ asset('vendor/daterangepicker/moment.min.js') }}"></script>
    <script src="{{ asset('vendor/daterangepicker/daterangepicker.js') }}"></script>
    <script src="{{ asset('vendor/countdowntime/countdowntime.js') }}"></script>
    <!--===============================================================================================-->
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}