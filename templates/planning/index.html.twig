{% extends 'base.html.twig' %}

{% block title %}Planning-Euratech-kids{% endblock %}

{% block body %}
    
    <div class="container-fluid">
        <div class="row py-5 bg-gray">
            <div class="col text-center py-2">
                <h1 class="text-black">Événements</h1>
            </div>
        </div>
    </div>
    <div class="container-fluid" id="events">
        <div class="row pt-4 text-center">
            <div class="col-md-1 col-0"></div>
            <div class="col-md-3 col-6 text-center text-white py-2">
                <h3>Les évènements</h3>
            </div>
            <div class="col-md-7 col-6 text-center text-white py-2">
                <h3>en détail:</h3>
            </div>
            <div class="col-md-1 col-0"></div>
        </div>
       {% for event in events %}
        <div class="row py-2" style="background-color: RGBA(0,0,0, 0.4)">
            <div class="col-md-1 col-0"></div>
            <div class="col-md-3 col-12 py-2">
                <div class="card text-center text-white border-3 border-warning py-2" id="events">
                    <div class="card-title text-warning">
                        {{ event.category }}
                    </div>
                    <div class="card-subtitle">
                        {{ event.ageMin }}-{{ event.ageMax }} ans
                    </div>
                    <div class="card body border-0" id="events">
                        {{ event.startDate|date("d/m/Y") }}<br>
                        {{ event.seats }} places restantes
                    </div>
                    <button class="btn col-4 btn-outline-warning mx-auto mt-2" type="button" data-toggle="collapse" data-target="#collapseExample{{ event.id }}" aria-expanded="false" aria-controls="collapseExample">
                        Voir
                    </button>
                </div>
            </div>
            <div class="col-md-7 col-12 text-center py-2 ">
                <div class="collapse" id="collapseExample{{ event.id }}">
                    <div class="card" style="background-color: rgba(0,9,94,0.4)">
                        <div class="card-img-thumbnail mt-2">
                            <img src="{{ asset('uploads/' ~ event.picture) }}" style="max-height: 250px">
                        </div>
                        <div class="card-title mt-2 text-warning">
                            <h3>Intitulé : {{ event.title }}</h3>
                        </div>
                        <div class="card-subtitle text-warning">
                            <h5>Programme : {{ event.category }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-bold text-black">Description : {{ event.description }}</p>
                            <p class="text-bold text-black">Début : {{ event.startDate|date("d/m/Y") }} Fin : {{ event.endDate|date("d/m/Y") }}</p>
                            <p class="text-bold text-black">Places restantes : {{ event.seats }}</p>
                            <p class="text-bold text-black">Tranche d'âge : {{ event.ageMin }}-{{ event.ageMax }}</p>
                            <p class="text-bold text-black">Lieu : {{ event.location }}</p>
                        </div>
                        <a href="{{ path('events_show', { 'slug': event.slug }) }}" class="col-4 btn btn-primary mx-auto m2" type="button">Je m'inscris</a>
                    </div>
                </div>
            </div>
            <div class="col-md-1 col-0"></div>
        </div>

            {% endfor %}
    </div>

{% endblock %}
